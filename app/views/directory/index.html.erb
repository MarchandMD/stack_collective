<main id="directory" class="directory-listing">
  <section class="container py-5">
    <header class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-4">
      <div>
        <h1 class="display-4 fw-bold mb-3">Alumni Directory</h1>
        <p class="lead text-body-secondary mb-0">A preview: list of graduates & career journeys.</p>
      </div>
      <a class="btn btn-outline-primary disabled" aria-disabled="true">Sign In To Customize (Soon)</a>
    </header>
    <form class="mb-4" role="search" aria-label="Alumni search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search alumni by name, cohort, or employer" disabled>
        <button class="btn btn-primary" type="submit" disabled>Search</button>
      </div>
    </form>
    <div class="table-responsive shadow-sm rounded overflow-hidden">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Cohort</th>
            <th scope="col">Current Employer</th>
            <th scope="col">Past Employers</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Jane Doe</td>
            <td>Spring 2022</td>
            <td>Tech Inc.</td>
            <td>Startup One, Business Two</td>
          </tr>
          <tr>
            <td>John Smith</td>
            <td>Fall 2021</td>
            <td>WebSoft</td>
            <td>Alpha LLC, Beta Corp</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</main>
