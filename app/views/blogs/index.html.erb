<main id="blogs" class="blogs-listing">
  <section class="container py-5">
    <header class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-4">
      <div>
        <h1 class="display-4 fw-bold mb-3">Community Blogs & Feeds</h1>
        <p class="lead text-body-secondary mb-0">Preview: curated posts from alumni and community sources.</p>
      </div>
      <a class="btn btn-outline-primary disabled" aria-disabled="true">Sign In To Share (Soon)</a>
    </header>
    <div class="mb-4">
      <button class="btn btn-success disabled" aria-disabled="true">Add an article</button>
    </div>
    <div class="feed-list">
      <article class="feed-card card mb-4 border-0 shadow-sm placeholder-glow">
        <div class="card-body">
          <div class="h5 mb-2">LinkedIn Post</div>
          <div class="oembed">
            <span class="placeholder col-8 mb-2 d-block"></span>
            <span class="placeholder col-6 mb-2 d-block"></span>
            <span class="placeholder col-10 mb-2 d-block"></span>
            <span class="placeholder col-4 d-block"></span>
          </div>
        </div>
      </article>
      <article class="feed-card card mb-4 border-0 shadow-sm placeholder-glow">
        <div class="card-body">
          <div class="h5 mb-2">Bluesky Post</div>
          <div class="oembed">
            <span class="placeholder col-7 mb-2 d-block"></span>
            <span class="placeholder col-9 mb-2 d-block"></span>
            <span class="placeholder col-4 d-block"></span>
          </div>
        </div>
      </article>
      <article class="feed-card card mb-4 border-0 shadow-sm placeholder-glow">
        <div class="card-body">
          <div class="h5 mb-2">Personal Blog</div>
          <div class="oembed">
            <span class="placeholder col-10 mb-2 d-block"></span>
            <span class="placeholder col-5 mb-2 d-block"></span>
            <span class="placeholder col-8 mb-2 d-block"></span>
            <span class="placeholder col-6 d-block"></span>
          </div>
        </div>
      </article>
    </div>
    <div class="text-center mt-4 small text-body-secondary">Dynamic blog aggregation planned. Layout preview only.</div>
  </section>
</main>
